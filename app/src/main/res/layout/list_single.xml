<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <TableRow>
        <TextView
            android:id="@+id/txt"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:textColor="@color/grey_500"/>
    </TableRow>
    <TableRow>
        <mbpl.graphical.passwords.customProgressBar.CustomProgress
            android:id="@+id/customProgressUsability"
            android:layout_width="match_parent"
            android:layout_height="@dimen/custom_progress_height"
            android:layout_below="@+id/customProgressSecure"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="30dp"/>
    </TableRow>
    <TableRow>
        <mbpl.graphical.passwords.customProgressBar.CustomProgress
            android:id="@+id/customProgressSecurity"
            android:layout_width="match_parent"
            android:layout_height="@dimen/custom_progress_height"
            android:layout_below="@+id/customProgressSecure"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="30dp"/>



    </TableRow>
</TableLayout>